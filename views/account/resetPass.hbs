<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link rel="stylesheet" href="/stylesheet/account/resetPass.css">
</head>
<body>
     <div class="container">
        <div class="reset-password-form">
            <h1 class="text-center form-title">Reset Password</h1>
            <!-- Success Message -->
            {{#if message}}
            <div class="alert alert-success alert-message text-center" role="alert">
                {{message}}
            </div>
            {{/if}}

            <!-- Error Message -->
            {{#if error}}
            <div class="alert alert-danger alert-message text-center" role="alert">
                {{error}}
            </div>
            {{/if}}
            <form action="/api/reset-password" method="POST">
                <!-- Hidden Token -->
                <input type="hidden" name="token" value="{{token}}">

                <!-- Password Field -->
                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input 
                        type="password" 
                        id="newPassword" 
                        name="newPassword" 
                        class="form-control" 
                        placeholder="Enter your new password" 
                        required>
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <label for="Email" class="form-label">Email Address</label>
                    <input 
                        type="email" 
                        id="Email" 
                        name="email" 
                        class="form-control" 
                        placeholder="Enter your email address" 
                        required>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-reset">Reset Password</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS Bundle CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
