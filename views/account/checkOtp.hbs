<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheet/account/checkOtp.css">
    <title>Verify OTP</title>
</head>
<body>
    <div class="container">
        <div class="otp-verification-form">
            <h1 class="form-title">Verify OTP</h1>
            <!-- Success Message -->
            {{#if message}}
            <div class="alert alert-success alert-message text-center" role="alert">
                {{message}}
            </div>
            {{/if}}

            <!-- Error Message -->
            {{#if error}}
            <div class="alert alert-danger alert-message text-center" role="alert">
                {{error}}
            </div>
            {{/if}}
            <form action="/api/verify-otp" method="POST">
                <!-- Email Field -->
                <div class="mb-3">
                    <label for="email" class="form-label">Enter your email:</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-control" 
                        placeholder="Enter your email address" 
                        required>
                </div>

                <!-- OTP Field -->
                <div class="mb-3">
                    <label for="otp" class="form-label">Enter OTP:</label>
                    <input 
                        type="text" 
                        id="otp" 
                        name="otp" 
                        class="form-control" 
                        placeholder="Enter the OTP you received" 
                        required>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-submit">Verify OTP</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
