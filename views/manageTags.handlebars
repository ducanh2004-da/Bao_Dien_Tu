<div class="container mt-6">
    <!-- Tag List Section -->
    <div class="card">
        <div class="card-header">
            Danh sách nhãn tag
        </div>
        <div class="card-body">
            <!-- Category Radio Buttons -->
            <h6>Chuyên mục</h6>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category" id="category1" checked>
                <label class="form-check-label" for="category1">Thời sự</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category" id="category2">
                <label class="form-check-label" for="category2">Kinh tế</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="category" id="category3">
                <label class="form-check-label" for="category3">Giáo dục</label>
            </div>

            <!-- Tag Buttons -->
            <div class="mt-3">
                <button type="button" class="btn btn-outline-secondary btn-sm">Biến đổi khí hậu</button>
                <button type="button" class="btn btn-outline-secondary btn-sm">Xung đột khu vực</button>
                <button type="button" class="btn btn-outline-secondary btn-sm">Phát triển kinh tế địa phương</button>
            </div>
        </div>
    </div>
</div>
