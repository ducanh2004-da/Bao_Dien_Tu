<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheet/admin/home.css">
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <h2>Admin Panel</h2>
        <nav>
            <ul>
                <li><a class="btn-toggle" data-target="#posts-section" href="#">Quản lý bài viết</a></li>
                <li><a class="btn-toggle" data-target="#categories-section" href="#">Chuyên mục</a></li>
                <li><a class="btn-toggle" data-target="#users-section" href="#">Danh sách người dùng</a></li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="content">
        <div class="text-center">
        <a href="#" class="btn bg-success greeting-btn">
            Chào mừng, <span>{{user.username}}</span>!
        </a>
        <a href="api/logout" class="btn bg-success greeting-btn">
            Log out
        </a>
       </div>

        <!-- Quản lý bài viết -->
        <section id="posts-section" class="section">
            <h2>Quản lý bài viết</h2>
            <div class="btn-group mb-3">
                <button class="btn btn-outline-primary" onclick="filterPosts('all')">Tất cả</button>
                <button class="btn btn-outline-success" onclick="filterPosts('Published')">Đã duyệt</button>
                <button class="btn btn-outline-warning" onclick="filterPosts('Approved')">Chưa duyệt</button>
                <button class="btn btn-outline-danger" onclick="filterPosts('Pending-Approval')">Chưa chấp nhận</button>
            </div>
            <div class="post-list">
                {{#each posts}}
                <div class="card mb-3 post-card {{this.statusName}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">Trạng thái: {{this.statusName}}</p>
                        <p>{{this.abstract}}</p>
                        <div class="d-flex justify-content-start">
                            <form action="/admin/post/{{this.id}}/accept" method="POST">
                                <button type="submit" class="btn btn-success">Duyệt</button>
                            </form>
                            <form action="/admin/post/{{this.id}}/notaccept" method="POST">
                                <button type="submit" class="btn btn-danger">Không Duyệt</button>
                            </form>
                            <a href="/admin/post/detail" class="btn btn-info">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>

        <!-- Chuyên mục -->
        <section id="categories-section" class="section">
            <h2>Quản lý chuyên mục</h2>
            <div class="category-list">
                {{#each categories}}
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <div class="d-flex justify-content-start">
                            <a href="/admin/category/{{this.id}}/edit" class="btn btn-info">Sửa</a>
                            <form action="/admin/category/{{this.id}}/delete" method="POST">
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
                <a href="/admin/category/create" class="btn btn-primary">Thêm mới</a>
            </div>
        </section>

        <!-- Danh sách người dùng -->
        <section id="users-section" class="section">
            <h2>Danh sách người dùng</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.username}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.role}}</td>
                        <td><a href="/admin/{{this.id}}/detailUser" class="btn btn-info">Xem</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </main>

    <script>
        document.querySelectorAll('.btn-toggle').forEach(btn => {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('data-target'));
                document.querySelectorAll('.section').forEach(section => section.classList.remove('active'));
                target.classList.add('active');
            });
        });

        function filterPosts(status) {
            document.querySelectorAll('.post-card').forEach(post => {
                post.style.display = status === 'all' || post.classList.contains(status) ? 'block' : 'none';
            });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
