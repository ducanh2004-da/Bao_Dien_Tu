<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <title>Edit Post</title>
</head>
<body>
    <div class="container mt-5">
    <a href="/admin" class="btn btn-light mb-3">
        <i class="bi bi-arrow-left"></i> Trở về
    </a>
    <div class="card shadow-lg p-4">
        <h1 class="text-center text-primary mb-4">Chỉnh sửa bài viết</h1>
        <form action="/admin/post/{{post.id}}/edit" method="POST">
            <!-- Tiêu đề bài viết -->
            <div class="form-group mb-3">
                <label for="title" class="form-label fw-bold">Tiêu đề bài viết</label>
                <input type="text" id="title" name="title" value="{{post.title}}" required 
                       class="form-control border-primary shadow-sm" />
            </div>
            <!-- Tóm tắt bài viết -->
            <div class="form-group mb-3">
                <label for="title" class="form-label fw-bold">Tóm tắt bài viết</label>
                <input type="text" id="abstract" name="abstract" value="{{post.abstract}}" required 
                       class="form-control border-primary shadow-sm" />
            </div>

            <!-- Nội dung -->
            <div class="form-group mb-4">
                <label for="content" class="form-label fw-bold">Nội dung</label>
                <textarea id="content" name="content" rows="8" 
                          class="form-control border-primary shadow-sm" >{{post.content}}</textarea>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary px-4 py-2 shadow">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a href="/admin/post/{{post.id}}" class="btn btn-secondary px-4 py-2 shadow">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>